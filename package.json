{
  "name": "mern-ecommerce",
  "version": "1.0.0",
  "description": "MERN Ecommerce",
  "main": "server/index.js",
  "scripts": {
  "dev": "npm-run-all --parallel dev:client dev:server",
  "dev:local": "bash ./scripts/dev.sh",
  "dev:client": "cd client && npm run dev",
  "dev:server": "cd server && npm run dev",
  "dev:no-db": "cd server && NO_DB=true npm run dev",
  "dev:in-memory": "cd server && USE_IN_MEMORY_DB=true npm run dev",
  "smoke": "bash ./scripts/smoke.sh",
  "ci:smoke": "bash ./scripts/ci-smoke.sh",
  "seed": "bash ./scripts/seed-local.sh",
    "postinstall": "npm-run-all --parallel install:*",
    "install:client": "cd client && npm install",
    "install:server": "cd server && npm install",
  "setup": "./scripts/setup.sh",
  "setup:docker": "docker compose up -d",
  "start:local": "node ./scripts/start-local.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mohamedsamara/mern-ecommerce.git"
  },
  "keywords": [
    "node",
    "express",
    "mongoose",
    "react",
    "redux",
    "redux-thunk",
    "webpack"
  ],
  "author": "Mohamed Samara (https://github.com/mohamedsamara)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mohamedsamara/mern-ecommerce/issues"
  },
  "homepage": "https://github.com/mohamedsamara/mern-ecommerce#readme",
  "devDependencies": {
    "cross-env": "^5.2.1",
    "npm-run-all": "^4.1.5"
  }
}
